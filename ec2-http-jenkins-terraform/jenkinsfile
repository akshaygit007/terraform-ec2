pipeline {
  agent any
  stages {
    stage ('Codechekout') {
      steps {
        checkout scm
      }
    }
    stage('Terraform') {
      steps {
        dir('/var/lib/jenkins/workspace/terraform-ec2/ec2-http-jenkins-terraform/') {
          withEnv(["instance_type=${params.instance_type}"]) {
            sh "terraform init"
            sleep 20
            sh 'terraform apply -var "instance_type=${instance_type}" --auto-approve'
          }
        }
      }
    }
    stage ('Output') {
      steps {
        echo "${instance_type} has sucesfully created"
      }
    }
  }
}
